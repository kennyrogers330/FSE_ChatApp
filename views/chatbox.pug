html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title ChatBox
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN", crossorigin="anonymous")
  body
    form.form(id="ChatForm")
      .container-fluid
        .row.mt-5.mb-3
          nav.navbar.fixed-top.navbar-light(style="background-color: #66a3ff")
            .container-fluid
              span.navbar-brand.h6 FSE Chat Room
              button.btn.btn-warning(type="submit") Logout

        .row.mt-1.bg-light.chatBody
          nav.navbar.navbar-light.bg-light
            .container-fluid
              span.navbar-brand.h6 Name
              span.small 08.08.2022 11:00A.M

          .col-sm-12.col-md-12.col-lg-12
            p.small A well-known quote, contained in a blockquote element.

        .row.mt-1
          .form-group
            textarea.form-control(id="text", name="message", rows="3")

        .row.mt-3
          nav.navbar.navbar-light.w-100(style="background-color: #66a3ff")
            .container-fluid.d-flex.justify-content-center
              button.btn.btn-warning(type="submit") Post

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL", crossorigin="anonymous")
    script(src='/socket.io/socket.io.js')
    script(src='/js/socket.js')